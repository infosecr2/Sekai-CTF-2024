import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int z = scanner.nextInt();
        int a =0;
        int b =0;
        while (z>0){

        a = scanner.nextInt();
        b = scanner.nextInt();
        
        System.out.println(a + b);
        z=z-1;}
        scanner.close();
    }
}
